<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algonquin.cst2335final.AutoFMActivity">

    <TextView
        android:id="@+id/autofmtvwelcome"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/fmwelcome"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/autofmVolContrtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autofmvolumcontr"
        android:layout_below="@+id/autofmtvwelcome"
        android:layout_alignParentStart="true"
        />

    <SeekBar
        android:id="@+id/autofmtuneseekBar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/autofmVolContrtv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/autoFMChannenNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Enter the Channel No here"
        android:layout_below="@+id/autofmtuneseekBar"
        android:layout_alignParentStart="true"
         />

    <Switch
        android:id="@+id/autfmswitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mute"
        android:layout_below="@+id/autofmtuneseekBar"
        android:layout_alignParentEnd="true"
         />



    <EditText
        android:id="@+id/autoChannelNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter the Channel Name here"
        android:layout_below="@+id/autoFMChannenNo"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/autofmChSet"
        />

    <Button
        android:id="@+id/autofmChSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fmChadd"
        android:layout_below="@+id/autoFMChannenNo"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/autofmlistview"
        android:layout_below="@+id/autoChannelNameEditText"
        android:layout_alignParentStart="true" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/autofmlistview"
        android:layout_alignTop="@+id/autofmlistview"
        android:id="@+id/autoFMFramLayout"
        android:layout_alignBottom="@+id/autofmlistview">

    </FrameLayout>




</RelativeLayout>
