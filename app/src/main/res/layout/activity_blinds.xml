<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_blinds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquin.cst2335final.BlindsActivity">

    <TextView
        android:id="@+id/blinds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/living_blinds"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blindsseekbar" />

    <Button
        android:id="@+id/buttonblinds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="@string/living_blindslogout" />
</LinearLayout>
