<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algonquin.cst2335final.AutoFMActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:text="@string/fmwelcome"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:id="@+id/autoFMListview"
        android:layout_above="@+id/autofmfrtuneseekBar" />


    <SeekBar
        android:id="@+id/autofmfrtuneseekBar"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_above="@+id/switch2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/autotextViewVolumcontrol"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="TextView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/switch2"
        android:layout_alignTop="@+id/switch2"
        android:layout_above="@+id/autoSeekBarFMFr" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:layout_above="@+id/autoSeekBarFMFr"
        android:layout_alignParentEnd="true"
       />

    <SeekBar
        android:id="@+id/autoSeekBarFMFr"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/autofmChSet"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/autofmChSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fmChSet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/autoChannelNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/autoFmChannelName"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/autofmChSet"
        android:layout_alignTop="@+id/autofmChSet" />



</RelativeLayout>
